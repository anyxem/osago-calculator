*
  box-sizing border-box


body
  font-family: 'Roboto', sans-serif;
  font-size 14px



.calculator-osago
  width 900px
  margin 10px auto 60px auto

  a
    color #30a213
    transition: all .3s;
    &:hover
      color #ff9907
    &.add
      font-weight bold
      padding-left 30px
      display inline-block
      position relative
      text-decoration none
      &:before
        content '+'
        color inherit
        position absolute
        left 0
        top 0
    &.back
      font-weight bold
      padding-left 26px
      display inline-block
      position relative
      text-decoration none
      &:before
        content '\02039'
        color inherit
        position absolute
        font-size 20px
        line-height 16px
        left 0
        top 0


  button
    background-color #30a213
    color #ffffff
    color: #fff;
    border: none;
    padding: 20px 24px;
    border-radius: 2px
    transition: all .3s;
    &:hover
      background-color #298a11

  h1
    font-weight 300
    font-size 36px
    clear both

  h2
    font-weight 30
    clear both

  .row-group
    clear both

  .form-group
    margin-bottom 27px
    width 270px
    margin-right 30px
    float left
    &.-half
      width 120px
    &.-double
      width 570px
    &.-full
      width auto
      float none

    .title
      color #8996ab
      margin-bottom 14px

  .price
    font-size: 71px;
    font-weight: 300;
    line-height: 70px;
    color #30a213

  .base-price
    margin-top: 8px;
    color #8996ab
    .number
      color #000000

  .table
    margin-top: 40px;
    margin-bottom 17px
    border-top: 1px #ccc solid;
    border-bottom: 1px #ccc solid;
    display table
    width 100%
    .cell
      display table-cell
      .key
        padding 26px 10px 10px 0px
        font-size 14px
        white-space: pre-line;
        color #8996ab
      .value
        padding 4px 10px 25px 0px
        font-size 24px
