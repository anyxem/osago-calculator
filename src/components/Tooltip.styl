  .ico-q {
    position: relative;
    color: inherit;
    text-decoration: none;
    display inline-block
    width 20px
    height 20px
    background-image url(/assets/qmark-gray.png)
  }
  .ico-q:after{
    box-sizing: border-box;
    color #ccc!important
    display: none;
    content: attr(data-tooltip);
    position: absolute;
    left: 50%;
    width: 260px;
    margin-left: -130px;
    padding: 12px 30px 26px 30px;
    bottom: 100%;
    background-color: #fff;
    box-shadow: 0 0 70px rgba(0,0,0,0.3)
    opacity: 0;
    transition: all .2s;
    font-size 11px
    line-height 18px
  }
  .ico-q:before{
    display none
    position: absolute;
    width: 0;
    height: 0;
    content: '';
    border-top: 5px solid #fff;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-bottom: 5px solid transparent;
    bottom: 100%;
    left: 50%;
    margin-bottom: 6px;
    margin-left: -5px;
    z-index: 1;
  }
  .ico-q:focus:after{
    display: block;
    opacity: 1;
    margin-bottom 16px

  }
  .ico-q:focus:before{
    display block
  }
