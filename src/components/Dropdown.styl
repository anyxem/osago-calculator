phone = "(max-width: 540px)";
tablet = "(max-width: 768px)";
middle = "(min-width: 991px) and (max-width: 1199px)";
basewidth = 900px

.calculator-osago
  .dropdown
    position relative
    .dropdown-label
      border 1px solid #dadde0
      padding 17px 20px 18px 19px
      background-image url(/assets/ar-black-down.png)
      background-repeat no-repeat
      background-position top 50% right 19px
      white-space nowrap
      overflow hidden
      border-radius 2px
      transition all .3s
      white-space nowrap
      @media middle
        padding-left 10px
        padding-right 10px
        background-position top 50% right 10px
      @media tablet
        padding-left 10px
        padding-right 10px
        background-position top 50% right 10px
    .dropdown-options
      display none
      position: absolute;
      box-shadow: 0 10px 45px rgba(0,0,0,0.2);
      padding: 10px 10px;
      width: 100%;
      background: #fff;
      z-index: 10;
      margin-top: 10px;
      max-height: 400px
      ul
        list-style-type: none
        padding 0
        margin 0
        max-height: 380px
        overflow auto
        padding 0 20px
        @media middle
          padding-left 0
          padding-right 0
        @media tablet
          padding-left 0
          padding-right 0
        li
          text-decoration none
          cursor: pointer;
          margin 16px 0
          color #8996ab
          &:hover
            color #333333
          &.selected
            color #30a213
    &.open
      .dropdown-options
        display block
    &.disabled
      opacity .4
    &:hover
      cursor pointer
      .dropdown-label
        border-color #30a213
  .-half
    .dropdown
      .dropdown-options
        ul
          li
            white-space nowrap
